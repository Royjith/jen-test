pipeline {
    agent none // No global agent is defined; individual stages will define their own agents

    stages {
        stage('initialization') {
            agent { label 'slave1' }
            options {
                retry(3) // Retry the build stage up to 3 times
            }
            steps {
                script {
                    sh 'terraform init'
                }
            }
        }
    }
}
