pipeline {
    agent none

    stages {
        stage('Checkout') {
            agent {
                label 'slave1'
            }
            steps {
                git branch: 'main', credentialsId: 'gitid', url: 'https://github.com/Royjith/jen-test.git'
            }
        }
        stage('Parallel Builds') {
            parallel {
                stage('Terraform init on Slave 1 or 2') {
                    agent {
                        label 'slave1 || slave2'
                    }
                    steps {
                        sh 'terraform init'
                    }
                }
            }
        }
        stage('Parallel Applies') {
            parallel {
                stage('Terraform apply on slave1 or 2') {
                    agent {
                        label 'slave1 || slave2'
                    }
                    steps {
                        sh 'terraform apply --auto-approve'
                    }
                }
            }
        }
    }
}
