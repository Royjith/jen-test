pipeline {
    stages {
        stage('Checkout') {
            agent { label 'slave1,slave2' } // specify a single node label here
            steps {
                git branch: 'main', credentialsId: 'gitid', url: 'https://github.com/Royjith/jen-test.git'
            }
        }
        stage('Parallel Builds') {
            parallel {
                stage('Terraform init on Slave 1 or 2') {
                    agent { labels 'slave1,slave2' } // specify multiple node labels here
                    steps {
                        sh 'terraform init'
                    }
                }
            }
        }
        stage('Parallel Applies') {
            parallel {
                stage('Terraform apply on slave1 or 2') {
                    agent { labels 'slave1,slave2' } // specify multiple node labels here
                    steps {
                        sh 'terraform apply --auto-approve'
                    }
                }
            }
        }
    }
}
