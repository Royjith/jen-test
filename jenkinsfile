pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'gitid', url: 'https://github.com/Royjith/jen-test.git'
            }
        }
        stage('Terraform init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Terraform delete') {
            steps {
                sh 'terraform destroy --auto-approve'
            }
        }
        
    }
}
